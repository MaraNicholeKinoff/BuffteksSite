@model IEnumerable<BuffteksWebsite.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-white">Clients</h2>

<p>
    <a  class="text-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead class="text-white">
        <tr>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model.CompanyName)
                </th>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.FirstName)
            </td class="text-white">
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td class="text-white" >
                <a class="text-success" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a class="text-success" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a class="text-success" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
